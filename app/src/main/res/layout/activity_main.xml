<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">


    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="#FAFAFA"
        android:textSize="20dp"
        android:layout_weight="2"
        android:background="#512DA8"
        android:paddingTop="10dp"
        android:paddingLeft="118dp"
        android:paddingRight="0dp"
        android:paddingBottom="8dp"
        android:layout_centerHorizontal="true"
        android:text=" Route Tracker"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/heading"
        android:paddingLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="?android:attr/selectableItemBackground"/>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="475dp"
        tools:context="trios.vrcontroller.vrcontroller.MapsActivity"
        android:layout_below="@+id/heading"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/map"
        android:layout_margin="6dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">


        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button1"
            android:layout_toStartOf="@+id/button1"
            android:layout_weight="2"
            android:width="345dp"
            android:hint="search"
            android:padding="10dp"
            android:textColorHint="#c7c7c7"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnGo"
            android:layout_width="35dp"
            android:layout_height="39dp"
            android:layout_alignStart="@+id/btnBack"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_weight="1"
            android:onClick="geoLocate"
            android:orientation="horizontal"
            android:text="go"
            android:textColor="#ffffff"
            android:textSize="19dp" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnCurrentLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_gps_fixed_black_24dp"
        app:backgroundTint="#D84315"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="19dp"
        android:layout_above="@+id/img"
        android:layout_alignParentEnd="true" />


    <LinearLayout
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btnView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/map"
            android:orientation="horizontal"
            android:text="View Images"
            android:textColor="#ffffff"
            android:background="#4527A0"
            android:layout_margin="6dp"
            />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/map"
            android:orientation="horizontal"
            android:text="Saved"
            android:textColor="#ffffff"
            android:background="#4527A0"
            android:layout_margin="6dp"

            />

    </LinearLayout>



</RelativeLayout>