<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">


    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="#FAFAFA"
        android:textSize="20dp"
        android:layout_weight="2"
        android:background="#512DA8"
        android:paddingTop="10dp"
        android:paddingLeft="118dp"
        android:paddingRight="0dp"
        android:paddingBottom="8dp"
        android:layout_centerHorizontal="true"
        android:text="Route Tracker"
        android:textStyle="bold"/>


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context="trios.vrcontroller.vrcontroller.MainActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:layout="@layout/dummy_mapviewfragment" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_below="@+id/heading"
        android:layout_centerHorizontal="true">


        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:hint="search"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:textColorHint="#c7c7c7"
            android:textSize="18dp"
            android:layout_toStartOf="@+id/btnGo"
            android:layout_alignBottom="@+id/btnGo"
            android:focusable="false"/>


        <Button
            android:id="@+id/btnGo"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:onClick="geoLocate"
            android:orientation="horizontal"
            android:text="GO"
            android:layout_marginTop="5dp"
            android:background="#00000000"
            android:textColor="#512DA8"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

